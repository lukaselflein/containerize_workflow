Bootstrap: docker
From: ubuntu

%post
   apt-get update
   apt-get install git --yes

   git clone https://github.com/atom/atom
   git clone https://github.com/jotelha/fireworks

%files
    python_packages.txt 

%environment
    GLOBAL=variables
    AVAILABLE="to all apps"
    export GLOBAL AVAILABLE

##############################
# foo
##############################

%apprun foo
    echo "RUNNING $SOFTWARE, global var is $GLOBAL"
    ls
    exit

%applabels foo
   BESTAPP FOO

%appinstall foo
   touch foo.exec

%appenv foo
    SOFTWARE=foo
    export SOFTWARE

%apphelp foo
    This is the help for foo.

%appfiles foo
   foo.txt

##############################
# bar
##############################

%apphelp bar
    This is the help for bar.

%applabels bar
   BESTAPP BAR

%appinstall bar
    touch bar.exec

%appenv bar
    SOFTWARE=bar
    export SOFTWARE

%apprun bar
    exec echo "RUNNING $SOFTWARE, global var is $GLOBAL"
    ls
