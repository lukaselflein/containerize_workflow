Bootstrap: docker
From: ubuntu

%post
   apt-get update
   apt-get install git --yes
   apt-get install python3 --yes
   apt-get install python3-pip --yes

   # pip install -r python_packages.txt

   # git clone --bare https://github.com/atom/atom /opt/atom
   git clone --bare https://github.com/jotelha/fireworks /opt/fireworks

%files
    python_packages.txt 

%environment
    GLOBAL=variables
    AVAILABLE="to all apps"
    export GLOBAL AVAILABLE

##############################
# foo
##############################

%apprun foo
    echo "RUNNING $SOFTWARE, global var is $GLOBAL"
    ls
    exit

%applabels foo
   BESTAPP FOO

%appinstall foo
   touch foo.exec

%appenv foo
    SOFTWARE=foo
    export SOFTWARE

%apphelp foo
    This is the help for foo.

%appfiles foo
   foo.txt
